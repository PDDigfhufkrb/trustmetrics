    <script>
        // –ê–Ω–∏–º–∏—Ä–æ–≤–∞–Ω–Ω—ã–π —Å—á—ë—Ç—á–∏–∫
        let counter = 15248;
        const counterElement = document.getElementById('liveCounter');
        
        function updateCounter() {
            counter += Math.floor(Math.random() * 10) + 1;
            counterElement.textContent = counter.toLocaleString();
        }
        
        setInterval(updateCounter, 3000);
        
        // –ê–Ω–∏–º–∞—Ü–∏—è –∞–∫—Ç–∏–≤–Ω–æ—Å—Ç–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
