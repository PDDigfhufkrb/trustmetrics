            }
            
            .timeline {
                flex-direction: column;
                gap: 3rem;
            }
            
            .timeline-step {
                width: 100%;
            }
            
            .timeline::before {
                display: none;
            }
        }

        @media (max-width: 768px) {
            .nav-links {
                display: none;
            }
            
            .hero-content h1 {
                font-size: 2.5rem;
            }
            
            .features-grid,
            .pricing-grid {
                grid-template-columns: 1fr;
            }
            
            .pricing-card.popular {
                transform: none;
            }
            
            .footer-container {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .form-group {
                flex-direction: column;
            }
        }

        /* –ê–Ω–∏–º–∞—Ü–∏–∏ */
        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        .floating {
            animation: float 3s ease-in-out infinite;
        }
    </style>
